<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_account"
    android:background="@drawable/welcome_background">

    <ImageView
        android:id="@+id/home"
        android:layout_width="115dp"
        android:layout_height="94dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home"
        android:text="Welcome! Please create an \n\t\t\t\taccount to continue."
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#900C3F"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/welcome"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_backg"
        android:textSize="20dp"
        android:hint="Username"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/name"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_backg"
        android:textSize="20dp"
        android:hint="E-mail address"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:background="@drawable/edit_backg"
        android:drawableLeft="@drawable/password"
        android:hint="Password"
        android:textSize="20dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/repeatPassword"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:background="@drawable/edit_backg"
        android:drawableLeft="@drawable/password"
        android:hint="Confirm password"
        android:textSize="20dp"
        android:inputType="textPassword" />

    <androidx.cardview.widget.CardView
        android:id="@+id/registerBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/repeatPassword"
        android:layout_marginTop="68dp"
        app:cardBackgroundColor="#900C3F"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_centerHorizontal="true"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create account"
                android:textColor="#EAD7D4"
                android:textSize="20dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>